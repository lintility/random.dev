{
  "name": "rdv-test",
  "version": "0.1.0",
  "description": "Multi-language test runner. Auto-detects Go, Rust, Node/TypeScript, and Python test suites.",
  "spec_version": "0.1",
  "inputs": {
    "workspace": true,
    "config": true,
    "artifacts": []
  },
  "outputs": {
    "artifacts": ["test-results.json", "test-results.xml"],
    "reports": ["test-results.xml"],
    "attestation": true
  },
  "trust_requirements": "local",
  "supported_platforms": [
    {"os": "linux", "arch": "amd64"},
    {"os": "linux", "arch": "arm64"}
  ],
  "parallel_safe": false,
  "implementation_variant": "polyglot-v1"
}
