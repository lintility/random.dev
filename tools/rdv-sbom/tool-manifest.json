{
  "name": "rdv-sbom",
  "version": "0.1.0",
  "description": "Generates CycloneDX or SPDX SBOMs from workspace artifacts using syft.",
  "spec_version": "0.1",
  "inputs": {
    "workspace": true,
    "config": true,
    "artifacts": []
  },
  "outputs": {
    "artifacts": ["sbom.json"],
    "reports": [],
    "attestation": true
  },
  "trust_requirements": "local",
  "supported_platforms": [
    {"os": "linux", "arch": "amd64"},
    {"os": "linux", "arch": "arm64"}
  ],
  "parallel_safe": true,
  "implementation_variant": "syft-v1"
}
